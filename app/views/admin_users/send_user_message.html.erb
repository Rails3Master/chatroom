<div align="center">
  <% if @user.photo_path.present? %>
      <div style="float: left;"><%= image_tag(@user.photo_path) %></div>
  <% else %>
      <%= '' %>
  <% end %>
  <h1 align="left"><%= @user.name %></h1>
  <br/>
  <br/>

  <div>
    <% %>
  </div>
  <div>
    <% form_for :message, :url => {:action => :send_user_message}, :html => {:multipart => true} do |m| %>
        <%= ckeditor_textarea(:message, :content, {:toolbar => "Smiley", :value => "", :width => '700px', :height => '300px'}) %>
        <%= submit_tag "送信" %>
        <%= button_to_function('キャンセル', "clear_search();") %>
        <%= hidden_field_tag "friend_id", @user.id %>
        <%= hidden_field_tag "user_id", @message.user_id %>
        <%= m.hidden_field :user_id %>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    $('show_user').style.display = '';
    function clear_search() {
        $('message_content').value = '';
    }
    ;
</script>