<html>
    <head>
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
      <%= javascript_include_tag :defaults %>
      <%= javascript_include_tag "/javascripts/admin/ajaxzip2/ajaxzip2/ajaxzip2.js" %>
    </head>
    <body>
        <%= error_messages_for :admin %>
        <% form_for :admin do |f| -%>
        <p><label for="login">Login</label><br/>
        <%= f.text_field :login %></p>
        <p><label for="name">name</label><br/>
          <%= f.text_field :name %></p>
        <p><label for="email">Email</label><br/>
        <%= f.text_field :email %></p>

        <p><label for="password">Password</label><br/>
        <%= f.password_field :password %></p>

        <p><label for="password_confirmation">Confirm Password</label><br/>
        <%= f.password_field :password_confirmation %></p>
        郵便番号：〒<%= f.text_field(:zip_code, {:onKeyUp =>"AjaxZip2.zip2addr(this,'admin[address1]','admin[address2]');"} )%>
        <br>
        都道府県名：
        <%= f.select :address1, Admin::PREFS,{:include_blank => true }%>
        <br>
        市区町村～番地:<%= f.text_field :address2 %></p><br>
        <p><%= submit_tag 'Sign up' %></p>
        <% end -%>
    </body>
</html>